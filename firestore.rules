rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // QUICK FIX: Extended expiration to end of 2026
    // TODO: Replace with proper auth-based rules later
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 12, 31);
    }
  }
}
